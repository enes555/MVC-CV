
@using MvcCv.Models.Entity;
@model List<TBLExperiences>



<div class="resume-section-content">
    <h2 class="mb-5">Deneyimlerim</h2>
    @foreach (var exp in Model)
    {
        <div class="d-flex flex-column flex-md-row justify-content-between mb-5">
            <div class="flex-grow-1">
                <h3 class="mb-0">@exp.title</h3>
                <div class="subheading mb-3">@exp.subtitle</div>
                <p>@exp.decleracation</p>
            </div>
            <div class="flex-shrink-0"><span class="text-primary">@exp.date</span></div>
        </div>
    }
</div>
